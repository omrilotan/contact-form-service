{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"env": {
		"node": true,
		"es6": true
	},
	"globals": {},
	"plugins": [],
	"extends": [
		"eslint:recommended"
	],
	"rules": {},
	"overrides": [
		{
			"files": [ "**/spec.js" ],
			"env": {
				"mocha": true
			},
			"globals": {
				"expect": true,
				"assert": true
			},
			"rules": {
				"no-empty-function": 0
			}
		}
	]
}
